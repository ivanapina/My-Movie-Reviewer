{{#extends "layouts/main"}}

 {{#each movies as | movie|}} 
          <div class="card">
            <h4 class="card-header">{{movie.title}} </h4>
             <div class="card-body">
                <img src="https://image.tmdb.org/t/p/w500{{movie.poster_path}}"  class="card-img-top"/>
              <p class="card-text"><div>{{movie.overview}}</div>
                <button class="btn btn-primary btn-block">Review this movie</button>
               </div>
               </div>
               </div>
{{/each}}
{{#each posts as |post|}}
<div class "card w-300 bg-zinc-800 shadow-xl prose" id="post-{{post.id}}">
  <div class="card-body">
    <h1 class="card-title">{{post.title}}</h1>

    {{#ifEq post.tyoe 'text'}}
    <p>{{post.body}}</p>
    {{/ifEq}}

    {{{build_comment_tree post.comments}}}
  </div>
</div>
{{/each}}

{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
<script src="/js/post.js"></script>
{{/if}}

{{#extends}}